<window>
  <id>7986</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <control>
      <type>label</type>
      <description>(Folder) - Visible when Folder or selection - Label use for Hide or unHide some items with Skin visible conditions</description>
      <id>34</id>
      <posX>0</posX>
      <posY>0</posY>
      <visible>yes</visible>
      <focusable>no</focusable>
    </control>
    <control>
      <type>label</type>
      <description>(Fanart) - Visible when Fanart found</description>
      <id>35</id>
      <posX>0</posX>
      <posY>0</posY>
      <visible>yes</visible>
      <focusable>no</focusable>
    </control>
	
    <control>
      <description>dummy backdrop control 1</description>
      <type>image</type>
      <id>11</id>
      <posX>-5</posX>
      <posY>0</posY>
      <width>1</width>
      <height>1</height>
    </control>
	
    <control>
      <description>dummy backdrop control 2</description>
      <type>image</type>
      <id>21</id>
      <posX>-5</posX>
      <posY>0</posY>
      <width>1</width>
      <height>1</height>
    </control>
	
    <control>
      <description>dummy poster control</description>
      <type>label</type>
      <id>1</id>
      <posX>-2000</posX>
      <posY>-2000</posY>
      <label>#Avalon.EnablePosterHide</label>
    </control>
	
    <!--            :: MOVIE BACKDROP ::            -->
    <control>
      <description>DEFAULT BACKGROUND</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <shouldCache>true</shouldCache>
    </control>
	
    <control>
      <description>Movie Backdrop (Fan Art) - Plug-in sets to invisible, if no art.</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#myfilms.fanart</texture>
      <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
      <animation effect="fade" time="0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
      <visible>[facadeview.filmstrip+control.isvisible(50)]+control.isvisible(11)</visible>	  
    </control>	
    <control>
      <description>Alternate Movie Backdrop - Toggles Load with Component 1 for animations on visibiltiy</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#myfilms.fanart2</texture>
      <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
      <animation effect="fade" time="0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
      <visible>[facadeview.filmstrip+control.isvisible(50)]+control.isvisible(21)</visible>	  
    </control>
	
    <control>
      <description>Movie Backdrop (Fan Art) - Plug-in sets to invisible, if no art.</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>180</posY>
      <width>1273</width>
      <height>720</height>
      <texture>#myfilms.fanart</texture>
      <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
      <animation effect="fade" time="0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
      <visible>!facadeview.filmstrip+control.isvisible(11)</visible>
    </control>
    <control>
      <description>Alternate Movie Backdrop - Toggles Load with Component 1 for animations on visibiltiy</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>180</posY>
      <width>1273</width>
      <height>720</height>
      <texture>#myfilms.fanart2</texture>
      <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
      <animation effect="fade" time="0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
      <visible>!facadeview.filmstrip+control.isvisible(21)</visible>
    </control>

	
    <!--            :: HEADER ::            -->
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>label</type>
      <id>1</id>
      <posX>185</posX>
      <posY>38</posY>
      <width>500</width>
      <label>My Films</label>
      <textcolor>6aa5cb</textcolor>
      <font>font22</font>
      <visible>Control.IsVisible(50)</visible>
    </control>
	
    <control>
      <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="300" delay="350" reversible="false">visible</animation>
      <description>Moviecount</description>
      <type>label</type>
      <label>| #currentmodule: #itemcount</label>
      <id>2073</id>
      <posX>242</posX>
      <posY>99</posY>
      <align>left</align>
      <font>AvalonLight12</font>
      <textcolor>ffffff</textcolor>
      <visible>Control.IsVisible(50)</visible>
    </control>
	
    <control>
      <description>Selection display</description>
      <type>fadelabel</type>
      <id>12</id>
      <posX>-2000</posX>
      <posY>80</posY>
      <font>font12</font>
      <width>430</width>
      <label>#myfilms.view - #myfilms.select</label>
      <visible>string.contains(#myfilms.view)|string.contains(#myfilms.select)</visible>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
	
	
    <!--            :: LIST VIEW Dummy ::            -->
    <control>
      <animation effect="fade" time="100">WindowOpen</animation>
      <animation effect="fade" time="100">WindowClose</animation>
      <type>textboxscrollup</type>
      <description>Summary (list)</description>
      <id>1025</id>
      <posX>-2000</posX>
      <posY>340</posY>
      <width>400</width>
      <height>243</height>
      <label>#myfilms.db.description.value</label>
      <seperator>---------------------------------------------------------------------------------------------------------</seperator>
      <onleft>1026</onleft>
      <onright>1026</onright>
      <onup>1026</onup>
      <ondown>1026</ondown>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
	
