<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>6</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:#selecteditem</define>
  <define>#useSelectedFanart:Yes</define>
  <controls>
    <!--            :: DUMMY ::            -->
    <control>
      <description>Selected item Label</description>
      <type>label</type>
      <id>7773</id>
      <posX>-2000</posX>
      <posY>100</posY>
      <label>#title</label>
      <visible>control.hastext(7773)</visible>
    </control>
    <control>
      <description>dummy poster control</description>
      <type>label</type>
      <id>1</id>
      <posX>-2000</posX>
      <posY>-2000</posY>
      <label>#Avalon.EnablePosterHide</label>
    </control>
    <!--            :: DEFAULT BACKGROUND ::            -->
    <control>
      <description>DEFAULT BACKGROUND</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <shouldCache>true</shouldCache>
    </control>
    <import>common.fanart.selected.xml</import>
    <!--            :: HEADER ::            -->
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>label</type>
      <id>1</id>
      <posX>185</posX>
      <posY>38</posY>
      <width>500</width>
      <label>3</label>
      <textcolor>6aa5cb</textcolor>
      <font>font22</font>
      <visible>facadeview.list | facadeview.filmstrip | facadeview.smallicons | facadeview.largeicons</visible>
    </control>
    <!--            :: IMPORT ::            -->
    <import tag="Background">myvideo.background.noinfo.xml</import>
    <import>common.time.xml</import>
    <import>myvideo.hiddenmenu.xml</import>
    <import tag="Views">myvideo.views.noinfo.xml</import>
    <import tag="Facade">common.facade.video.noinfo.xml</import>
    <import>myvideoTitle.Info.xml</import>
    <import>common.overlay.xml</import>
  </controls>
</window>