					<ondown>8</ondown>
					<onup>3</onup>
					<subitems>
						<subitem>Equals</subitem>
						<subitem>Starts With</subitem>
						<subitem>Contains</subitem>
						<subitem>Ends With</subitem>
					</subitems>
					<selected>2</selected>
                    <textcolorNoFocus>FF6aa5cb</textcolorNoFocus>
