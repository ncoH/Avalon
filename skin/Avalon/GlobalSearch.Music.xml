				<control>
					<description>Jump to (my) music</description>
					<type>button</type>
					<id>8</id>
					<label>2</label>
					<onup>5</onup>
					<ondown>9</ondown>
				</control>
				<control>
					<description>Jump to playing now</description>
					<type>button</type>
					<id>9</id>
					<label>4540</label>
					<onup>8</onup>
					<ondown>2</ondown>
				</control>
			</control>
