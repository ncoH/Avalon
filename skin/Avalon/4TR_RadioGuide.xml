<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>762</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<define>#header.label:Radio Guide</define>
	<define>#header.background:hover_my radio.png</define>	
<controls>

		<import>common.window.background.xml</import>	
	
	<control>
		<animation effect="fade" time="100">WindowOpen</animation>
		<animation effect="fade" time="100">WindowClose</animation>
		<type>label</type>
		<id>1</id>
		<posX>80</posX>
		<posY>30</posY>
		<width>500</width>
		<height>100</height>
		<label>#header.label</label>
		<textcolor>6aa5cb</textcolor>
		<font>AvalonLight40</font>
	</control>
	
    <control>
		<description>Date</description>
		<type>label</type>
		<id>0</id>
		<posX>1329</posX>
		<posY>64</posY>
		<textcolor>6aa5cb</textcolor>
		<font>AvalonLight22</font>
		<align>right</align>
		<label>#time</label>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>				
    </control>
	
    <control>
      <description>TVGUIDE Panel</description>
      <type>image</type>
      <id>2</id>
      <posX>146</posX>
      <posY>120</posY>
      <width>1185</width>
      <height>425</height>
      <colordiffuse>ffffffff</colordiffuse>
      <texture>-</texture>
    </control>

	<!-- Timeheader background must be dedfined before Timeheader label template -->
	    <!-- b/c Timeheader is on the background and will be rendered first -->
	<control>
		<description>time header background image template</description>
		<type>image</type>
		<id>90</id>
		<posX>352</posX>
		<posY>120</posY>
		<width>153</width>
		<height>37</height>
		<texture>button_small_settings_nofocus02.png</texture>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>
	
	<control>
		<description>time header label template</description>
		<type>label</type>
		<id>40</id>
		<posX>328</posX>
		<posY>135</posY>
		<font>font13</font>
        <textcolor>6aa5cb</textcolor>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

	<control>
		<description>day spin control</description>
		<type>spincontrol</type>
		<id>6</id>
		<width>16</width>
		<height>16</height>
		<posX>65</posX>
		<textYOff>1</textYOff>
		<posY>141</posY>
		<showrange>no</showrange>
		<orientation>horizontal</orientation>
		<align>center</align>
		<onleft>6</onleft>
		<onright>8</onright>
		<font>font13</font>
		<textureUp>arrow_round_right_nofocus.png</textureUp>
		<textureDown>arrow_round_left_nofocus.png</textureDown>
		<textureUpFocus>arrow_round_right_focus.png</textureUpFocus>
		<textureDownFocus>arrow_round_left_focus.png</textureDownFocus>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>
	
	<control>
		<description>time interval spin control</description>
		<type>spincontrol</type>
		<id>8</id>
		<width>16</width>
		<height>16</height>
		<posX>280</posX>
		<posY>141</posY>
		<showrange>no</showrange>
		<orientation>horizontal</orientation>
		<align>center</align>
		<textureUp>arrow_round_right_nofocus.png</textureUp>
		<textureDown>arrow_round_left_nofocus.png</textureDown>
		<textureUpFocus>arrow_round_right_focus.png</textureUpFocus>
		<textureDownFocus>arrow_round_left_focus.png</textureDownFocus>
		<onleft>6</onleft>
		<onright>8</onright>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

    <control>
      <description>Channel template</description>
      <type>image</type>
      <id>20</id>
      <posX>79</posX>
      <posY>166</posY>
      <width>250</width>
      <height>48</height>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
    </control>
	
    <control>
      <description>Channel image template</description>
		<type>image</type>
		<id>7</id>
		<posX>15</posX>
		<posY>1</posY>
		<width>44</width>
		<height>44</height>
		<keepaspectratio>yes</keepaspectratio>
		<zoom>no</zoom>
		<centered>yes</centered>
		<texture>defaultVideo.png</texture>		
    </control>

    <control>
      <description>channel Label template</description>
      <type>label</type>
      <id>18</id>
		<posX>75</posX>
		<posY>6</posY>
		<width>86</width>
		<height>20</height>
		<font>font13tvg</font>
		<textcolor>FFFFFFFF</textcolor>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
    </control>

	<control>
		<description>Current program title</description>
		<type>fadelabel</type>
		<id>13</id>
		<posX>435</posX>
		<posY>533</posY>
		<width>666</width>
		<label>#Radio.Guide.Title</label>
		<font>AvalonLight18</font>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>
	
	<control>
		<description>Current program time</description>
		<type>label</type>
		<id>14</id>
		<posX>435</posX>
		<posY>575</posY>
		<label>#Radio.Guide.Time - #Radio.Guide.Genre</label>
		<textcolor>6aa5cb</textcolor>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

	<control>
		<description>Description1</description>
		<type>textboxscrollup</type>
		<id>15</id>
		<posX>435</posX>
		<posY>607</posY>
		<width>850</width>
		<height>110</height>
		<label>#Radio.Guide.Description</label>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>
	
	<control>
      <description>template for program title dark area</description>
      <type>label</type>
      <visible>no</visible>
      <id>26</id>
      <label>-</label>
      <font>font13tvg</font>
      <textcolor>FFFFFFF0</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>

	<control>
		<description>template for program title light area</description>
		<type>label</type>
		<id>24</id>
		<visible>no</visible>
		<label>-</label>
		<font>font13tvg</font>
		<textcolor>99CCFF</textcolor>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

	<control>
		<description>vertical timeline</description>
		<type>image</type>
		<id>25</id>
		<posX>55</posX>
		<posY>162</posY>
		<width>35</width>
		<height>347</height>
		<colordiffuse>c0ffffff</colordiffuse>
		<texture>tvguide_slider.png</texture>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

	<control>
		<description>Horizontal scrollbar</description>
		<type>hscrollbar</type>
		<id>28</id>
		<posX>330</posX>
		<posY>505</posY>
		<width>994</width>
		<height>24</height>
		<visible>yes</visible>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>
	<control>
		<description>Vertical scrollbar</description>
		<type>vscrollbar</type>
		<id>29</id>
		<posX>1329</posX>
		<posY>165</posY>
		<width>26</width>
		<height>338</height>
		<visible>yes</visible>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

	<control>
		<description>record pin</description>
		<type>image</type>
		<id>31</id>
		<posX>330</posX>
		<posY>538</posY>
		<texture>tvguide_record_button.png</texture>
		<visible>no</visible>
		<animation effect="fade" time="800">WindowOpen</animation>
		<animation effect="fade" time="300">WindowClose</animation>
	</control>

</controls>
</window>
