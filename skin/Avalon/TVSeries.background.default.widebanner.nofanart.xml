<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>    
	<control>
		<description>background listview</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
        <posY>0</posY>
		<width>1920</width>
		<height>1080</height>
		<texture>overlay.png</texture>
		<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1239)|control.isvisible(1240)]+facadeview.list|facadeview.largeicons</visible>
	</control>
	
	<control>
		<description>background listview poster enabled (Series/Season)</description>
		<type>image</type>
		<id>0</id>
		<posX>243</posX>
		<posY>120</posY>
		<width>954</width>
		<height>590</height>
		<texture>viewport_poster_short.png</texture>
		<visible>[[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1240)]+facadeview.list] + !string.equals(#Avalon.hidePoster,yes)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="350" delay="550" reversible="false">visible</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">hidden</animation>
	</control>
	
	<control>
		<description>background listview (Series/Season)</description>
		<type>image</type>
		<id>0</id>
		<posX>1</posX>
		<posY>92</posY>
		<width>1893</width>
		<height>646</height>
		<texture>viewport_noposter_short.png</texture>
		<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1240)]+facadeview.list</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>

	<control>
		<description>viewport shadow poster disabled (Series/Season)</description>
		<type>image</type>
		<id>0</id>
		<posX>729</posX>
		<posY>120</posY>
		<width>467</width>
		<height>590</height>
		<texture>viewport_shadow_short.png</texture>
		<visible>[[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1240)]+facadeview.list] + string.equals(#Avalon.hidePoster,yes)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="0">WindowClose</animation>
		<animation effect="fade" time="0" delay="0">visible</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">hidden</animation>
	</control>
	
	<control>
		<description>Viewport List (Episodes)</description>
		<type>image</type>
		<id>1</id>
		<posX>1</posX>
		<posY>92</posY>
		<width>1893</width>
		<height>646</height>
		<texture>viewport_small.png</texture>
		<visible>control.isvisible(1239)+facadeview.list</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>
	
	<control>
		<description>background thumbs</description>
		<type>image</type>
		<id>0</id>
		<posX>0</posX>
		<posY>92</posY>
		<width>1893</width>
		<height>646</height>
		<texture>viewport_thumbs_short2.png</texture>
		<visible>facadeview.largeicons + control.isvisible(1237)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>
	
	<control>
		<description>Background Filmstrip</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
        <posY>0</posY>
		<width>1920</width>
		<height>1080</height>
		<texture>filmstrip_default_overlay.png</texture>
		<visible>facadeview.filmstrip | facadeview.coverflow</visible>
		<animation effect="fade" time="0">WindowClose</animation>
		<shouldCache>true</shouldCache>
	</control>
  </controls>
</window>